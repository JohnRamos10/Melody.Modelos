﻿@model Melody.Modelos.DTOs.ResetPasswordDto
@{
    ViewData["Title"] = "Nueva Contraseña - Melody Stream";
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8" />
    <title>Nueva Contraseña</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow">
                    <div class="card-header text-center bg-primary text-white">
                        <h3>Melody Stream</h3>
                        <p class="mb-0">Crea tu nueva contraseña</p>
                    </div>
                    <div class="card-body p-4">

                        <form asp-action="ResetPassword" method="post">
                            @Html.AntiForgeryToken()

                            <!-- Campos ocultos -->
                            <input asp-for="Email" type="hidden" />
                            <input asp-for="Token" type="hidden" />

                            <!-- Mensajes de error generales -->
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="display: @(ViewData.ModelState.ErrorCount > 0 ? "block" : "none")"></div>

                            <div class="mb-3">
                                <label asp-for="NuevaPassword" class="form-label">Nueva Contraseña</label>
                                <input asp-for="NuevaPassword" type="password" class="form-control" placeholder="Ingresa tu nueva contraseña" />
                                <span asp-validation-for="NuevaPassword" class="text-danger"></span>
                            </div>
                            <div class="mb-4">
                                <label asp-for="ConfirmarPassword" class="form-label">Confirmar Nueva Contraseña</label>
                                <input asp-for="ConfirmarPassword" type="password" class="form-control" placeholder="Confirma tu nueva contraseña" />
                                <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
                            </div>
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg">Cambiar Contraseña</button>
                            </div>
                        </form>
                        <div class="text-center">
                            <p class="mb-0">
                                <a asp-action="Login" class="text-primary text-decoration-none">Volver al Login</a>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <small class="text-muted">Tu información está protegida y segura</small>
                </div>

            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

